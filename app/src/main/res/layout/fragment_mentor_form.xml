<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Mentor.MentorForm"
    android:background="@color/black"
    android:padding="16dp"
    android:orientation="vertical">
    <ScrollView
        android:scrollbarSize="0dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:background="@drawable/rectbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mentor Form"
            android:gravity="center"
            android:textSize="30sp"
            android:padding="5dp"
            android:layout_margin="16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Provide Your Details"
            android:layout_marginStart="10dp"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>
        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            app:boxBackgroundColor="@color/white"
            android:layout_marginBottom="16dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/UserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            app:boxBackgroundColor="@color/white"
            android:layout_marginBottom="24dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/UserEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Enter Your Language :"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="10dp"
            android:textSize="18sp"/>
        <com.google.android.material.textfield.TextInputLayout

            app:boxBackgroundColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Language"
            android:layout_marginBottom="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/UserLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
<!--        <com.google.android.material.textfield.TextInputLayout-->
<!--            android:id="@+id/UserDoubt"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:hint="Doubt"-->
<!--            android:layout_marginBottom="8dp"-->
<!--            android:maxEms="10">-->
<!--            <com.google.android.material.textfield.TextInputEditText-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:maxLines="10"-->
<!--                android:ems="10"/>-->
<!--        </com.google.android.material.textfield.TextInputLayout>-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Enter Your Doubt :"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="10dp"
            android:textSize="18sp"/>
        <EditText
            android:hint="Doubt"
            android:padding="8dp"
            android:id="@+id/UserDoubt"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/rectbox"
            android:backgroundTint="@color/white"
            android:ems="10"
            android:maxLines="10"
            android:textColor="@color/black"
            android:textColorHint="#858585"
            android:textSize="15sp"/>

        <CheckBox
            android:id="@+id/PhoneCallCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="Do you Want Phone call Assistance"/>

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/white"
            android:hint="Phone"
            android:layout_marginBottom="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/UserPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"/>
        </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/BtnSubmit"
        app:cornerRadius="8dp" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>